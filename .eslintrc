# https://github.com/airbnb/javascript#table-of-contents
# http://www.acuriousanimal.com/2016/08/14/configuring-atom-with-eslint.html
{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "commonjs": true
  },
  "globals": {
    "Handlebars": true
  },
  "rules": {
    "indent": ["error", 4],
    "class-methods-use-this": [0],
    "import/extensions": "always"
  }
}
